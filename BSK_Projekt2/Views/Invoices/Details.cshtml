@model BSK_Projekt2.Models.Invoice

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Details</h2>

<div>
    <h4>Invoice</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Cost)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Cost)
        </dd>
        @foreach(var repair in Model.Repairs)
            {
            <dt>Opis</dt>
            <dd>@repair.Description</dd>
        }
    </dl>
</div>
<p>
    @Html.ActionLink("Zmień", "Edit", new { id = Model.Id }) |
    @Html.ActionLink("Wróć bez zapisywania", "Index")
</p>
